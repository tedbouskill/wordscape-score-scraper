{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "REPO_ROOT": "${workspaceFolder:[REPO-NAME]}",
                "WORKSPACE_ROOT": "${workspaceFolder}"
            }
        }
    ]
}